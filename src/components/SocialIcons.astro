---
import SocialIcon from "@components/SocialIcon.astro";
import { PROFILE } from "@data/profile";

export interface Props {
    icon_size: string;
    gap_class?: string;
}
  
const { icon_size, gap_class = "gap-2" } = Astro.props;
---
<ul class:list={["not-prose flex flex-wrap", gap_class]}>
    <SocialIcon icon_size={icon_size} URL={PROFILE.socialLinks.email} icon="envelope-fill"/>
    <SocialIcon icon_size={icon_size} URL={PROFILE.socialLinks.github} icon="github"/>
    <SocialIcon icon_size={icon_size} URL={PROFILE.socialLinks.linkedin} icon="linkedin"/>
</ul>
