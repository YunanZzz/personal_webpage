---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import { HIGHLIGHTAUTHOR } from "@consts";

type Props = {
  entry: CollectionEntry<"publications">;
  compact?: boolean;
};

const { entry, compact = false } = Astro.props as {
  entry: CollectionEntry<"publications">;
  compact?: boolean;
};

const splitStr = (authors: string | undefined, targetAuthor: string) => {
  if (!authors) return [];
  const parts = authors.split(new RegExp(`(${targetAuthor})`, 'g'));
  return parts;
};
const decomposeURL = (URL: string | undefined) => {
  if (!URL) return { text: '', url: '' };
  const parts = URL.split(": ");
  return { text: parts[0], url: parts[1] };
};

const dataLink = decomposeURL(entry.data.dataURL);
const paperLink = decomposeURL(entry.data.paperURL);
const codeLink = decomposeURL(entry.data.codeURL);
const webLink = decomposeURL(entry.data.webURL);
const authorsParts = splitStr(entry.data.authors, HIGHLIGHTAUTHOR);
const pubText = entry.data.pub ?? "";
const isSubmittedVenue = /^submitted to\b/i.test(pubText);

---

<div
  class:list={[
    "w-full not-prose group relative grid rounded-lg items-center border border-black/15 transition-colors duration-300 ease-in-out hover:bg-black/5 hover:text-black focus-visible:bg-black/5 focus-visible:text-black dark:border-white/20 dark:hover:bg-white/5 dark:hover:text-white dark:focus-visible:bg-white/5 dark:focus-visible:text-white",
    compact ? "grid-cols-auto md:grid-cols-[150px_auto] gap-2.5 px-2.5 py-2" : "grid-cols-auto md:grid-cols-[204px_auto] gap-4 px-4 py-3",
  ]}
>
  <Image
  src={entry.data.img ?? ''}
  alt={entry.data.imgAlt ?? ''}
  width={640}
  height={480}
  class:list={[
    "shadow-sm rounded-md hover:opacity-80 transition hidden md:flex object-contain bg-neutral-100 dark:bg-neutral-800/60",
    compact ? "sm:w-[150px] sm:h-[86px] sm:mr-2" : "sm:w-[240px] sm:h-[135px] sm:mr-6",
  ]}
  loading="eager"
  />


  <div class="flex items-center h-full">
    <div class="flex flex-col">
      <div class="w-full">
        <div class:list={["font-semibold w-full", compact ? "text-base leading-snug" : "text-md"]}>
          {entry.data.title}
        </div>
        <div class:list={["w-full", compact ? "text-sm" : "text-sm"]}>
          {authorsParts.map((part:any) =>
            part === HIGHLIGHTAUTHOR ? <u><strong>{part}</strong></u> : part
          )}
        </div>
        <div class:list={["w-full flex flex-wrap items-center gap-x-2", compact ? "text-sm" : "text-sm"]}>
          {entry.data.pub && (
            <span>
              {isSubmittedVenue ? <span class="italic">{pubText}</span> : <>In <span class="italic">{pubText}</span></>}
            </span>
          )}
          {(paperLink.url!=="" || codeLink.url!=="" || webLink.url!=="" || dataLink.url!=="") && entry.data.pub && (
            <span class="text-neutral-400">â€¢</span>
          )}
          {paperLink.url!="" && <a class="underline hover:text-cyan-500 text-orange-500 dark:hover:text-cyan-500 transition-colors duration-300 ease-in-out visited:text-neutral-500 dark:visited:text-neutral-400" target="_blank" href={paperLink.url}>{paperLink.text}</a>}
          {codeLink.url!="" && <a class="underline hover:text-cyan-500 text-orange-500 dark:hover:text-cyan-500 transition-colors duration-300 ease-in-out visited:text-neutral-500 dark:visited:text-neutral-400" target="_blank" href={codeLink.url}>{codeLink.text}</a>}
          {webLink.url!="" && <a class="underline hover:text-cyan-500 text-orange-500 dark:hover:text-cyan-500 transition-colors duration-300 ease-in-out visited:text-neutral-500 dark:visited:text-neutral-400" target="_blank" href={webLink.url}>{webLink.text}</a>}
          {dataLink.url!="" && <a class="underline hover:text-cyan-500 text-orange-500 dark:hover:text-cyan-500 transition-colors duration-300 ease-in-out visited:text-neutral-500 dark:visited:text-neutral-400" target="_blank" href={dataLink.url}>{dataLink.text}</a>}
        </div>
      </div>
      <p class:list={["publication-desc break-words", compact ? "text-sm mt-1 line-clamp-1" : "text-sm mt-2"]} set:html={entry.data.description}></p>
    </div>
  </div>
</div>

<style>
  :global(.publication-desc a) {
    font-weight: 400;
    color: rgb(122 122 122);
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-thickness: 1px;
    transition: color 0.2s ease;
  }

  :global(.publication-desc a:hover) {
    color: rgb(96 96 96);
  }

  :global(.dark .publication-desc a) {
    color: rgb(156 156 156);
  }

  :global(.dark .publication-desc a:hover) {
    color: rgb(188 188 188);
  }
</style>
