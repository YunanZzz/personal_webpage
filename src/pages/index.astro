---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME } from "@consts";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import PublicationCard from "@components/PublicationCard.astro";
import SocialIcons from "@components/SocialIcons.astro";
import VisitorMap from "@components/VisitorMap.astro";
import { PROFILE } from "@data/profile";
import Image from "astro/components/Image.astro";

const base = import.meta.env.BASE_URL.replace(/\/+$/, "");
const withBase = (path: string) => `${base}/${path.replace(/^\/+/, "")}`;

const publications: CollectionEntry<"publications">[] = (
  await getCollection("publications")
)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PUBLICATIONS_ON_HOMEPAGE);

const teachingExperience = [
  {
    course: "CS 44000",
    courseName: "Large Scale Data Analytics",
    terms: [
      { label: "Fall 2026",link:"https://www.cs.purdue.edu/homes/csjgwang/CS440/"},
      { label: "Fall 2025"},
      { label: "Spring 2025"},
      { label: "Fall 2024"},
    ],
  },
  {
    course: "CS 24000",
    courseName: "Programming In C",
    terms: [{ label: "Spring 2024", link: "https://turkeyland.net/syllabi/syllabus-240.pdf" }],
  },
  {
    course: "CS 25000",
    courseName: "Computer Architecture",
    terms: [{ label: "Fall 2023" }],
  },
];

const researchFocus = [
  { icon: "üîé", label: "Vector Search" },
  { icon: "üóÇÔ∏è", label: "Vector Indexing" },
  { iconClass: "bi bi-database-fill", label: "Vector Databases" },
];
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container wide={true}>
    <aside data-pagefind-ignore class="space-y-7 md:space-y-8">
      <section id="about" class="animate pt-2">
        <div class="grid grid-cols-1 gap-5 md:grid-cols-[240px_minmax(0,1fr)] md:items-start md:gap-6">
          <div class="mx-auto flex flex-col items-center gap-2 md:mx-0">
            <Image
              src={withBase(PROFILE.profileImage.src)}
              alt={PROFILE.profileImage.alt}
              width={240}
              height={240}
              class="h-48 w-48 rounded-full object-cover shadow-sm md:h-56 md:w-56"
            />
            <a
              href={PROFILE.socialLinks.scholar}
              target="_blank"
              rel="noopener noreferrer"
              class="mt-4 inline-flex items-center gap-1.5 rounded-full border border-neutral-300 bg-neutral-100 px-2.5 py-1 text-xs font-mono tracking-[0.02em] text-neutral-600 transition-colors hover:border-neutral-400 hover:text-black dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-300 dark:hover:border-neutral-500 dark:hover:text-white"
            >
              <i class="bi bi-mortarboard-fill"></i>
              Google Scholar
            </a>
          </div>
          <div class="space-y-2.5">
            <div class="flex flex-col gap-1.5 md:flex-row md:items-start md:justify-between">
              <div>
                <h1 class="text-3xl font-bold tracking-tight text-black dark:text-white md:text-4xl">
                  {PROFILE.name}
                  <span class="mx-2 text-neutral-400 dark:text-neutral-500">-</span>
                  <span class="font-medium text-neutral-500 dark:text-neutral-300">
                    {PROFILE.nativeName}
                  </span>
                </h1>
                <p class="mt-1 text-lg font-medium text-neutral-600 dark:text-neutral-300">
                  {PROFILE.shortBio}
                </p>
              </div>
              <SocialIcons icon_size="text-2xl" gap_class="gap-2.5" />
            </div>

            <article class="space-y-1.5 text-sm leading-[1.45] md:text-base md:leading-[1.5]">
              <div class="space-y-0">
                {PROFILE.intro.map((line, index) => (
                  <p
                    class:list={["m-0 leading-[1.45]", index === 2 && "mt-3"]}
                    set:html={line.replaceAll('src="/', `src="${withBase("")}`)}
                  ></p>
                ))}
              </div>
              <p class="flex flex-wrap items-center justify-center gap-1.5 text-sm font-medium text-neutral-700 dark:text-neutral-200 md:text-base">
                {researchFocus.map((item, index) => (
                  <>
                    <span class="inline-flex items-center gap-1.5">
                      {item.iconClass ? <i class={item.iconClass}></i> : <span>{item.icon}</span>}
                      <span>{item.label}</span>
                    </span>
                    {index < researchFocus.length - 1 && <span class="text-neutral-500 dark:text-neutral-400">‚Ä¢</span>}
                  </>
                ))}
              </p>
            </article>
          </div>
        </div>
      </section>

      <section id="research" class="animate space-y-2.5">
        <div class="section-marker"></div>
        <h2 class="section-title">Research</h2>
        <div class="space-y-2 text-sm leading-[1.45] md:text-base md:leading-[1.5]">
          <p set:html={PROFILE.researchSummary}></p>
          <ul class="list-disc space-y-1 pl-4">
            {PROFILE.researchThemes.map((theme) => (
              <li>
                <span class="font-semibold text-black dark:text-white">{theme.title}:</span>{" "}
                <span class="research-theme-description" set:html={theme.description}></span>
              </li>
            ))}
          </ul>
        </div>
      </section>

      <section id="news" class="animate space-y-2.5">
        <div class="section-marker"></div>
        <h2 class="section-title">News + Updates</h2>
        <ul class="not-prose divide-y divide-neutral-300 dark:divide-white/10">
          {PROFILE.newsItems.map((item) => (
            <li class="grid grid-cols-1 gap-1.5 py-2 md:grid-cols-[120px_minmax(0,1fr)] md:gap-2.5">
              <div class="font-semibold text-black dark:text-white">{item.date}</div>
              <div class="space-y-1">
                <p class="text-base" set:html={item.text}></p>
                <div class="flex flex-wrap gap-2">
                  {item.tags.map((tag) => (
                    <span class="rounded-full bg-neutral-200 px-2 py-0.5 text-xs font-semibold uppercase tracking-wide text-neutral-700 dark:bg-neutral-800 dark:text-neutral-200">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </li>
          ))}
        </ul>
      </section>

      <section id="publications" class="animate space-y-2.5">
        <div class="section-marker"></div>
        <div class="flex flex-wrap items-center justify-between gap-y-2">
          <h2 class="section-title m-0">Publications</h2>
          <Link href={withBase("publications")}>See all research</Link>
        </div>
        <ul class="not-prose flex flex-col gap-2.5">
          {
            publications.length > 0 ? (
              publications.map((publication) => (
                <li>
                  <PublicationCard entry={publication} compact={true} />
                </li>
              ))
            ) : (
              <li class="text-sm text-neutral-600 dark:text-neutral-400">
                No publications yet. Add files in `src/content/publications/`.
              </li>
            )
          }
        </ul>
      </section>

      <section id="teaching-and-visitors" class="animate">
        <div class="grid grid-cols-1 gap-4 md:grid-cols-2 md:items-start md:gap-5">
          <div class="space-y-6">
            <section id="teaching" class="space-y-3">
              <div class="section-marker"></div>
              <h2 class="section-title">Teaching</h2>
              <div class="space-y-2 text-sm leading-relaxed md:text-base">
                {teachingExperience.map((item) => (
                  <p>
                    <span class="font-semibold text-black dark:text-white">{item.course} {item.courseName}:</span>{" "}
                    {item.terms.map((term, index) => (
                      <>
                        {index > 0 && ", "}
                        {term.link ? (
                          <a href={term.link} target="_blank" rel="noopener noreferrer" class="underline underline-offset-2">{term.label.trim()}</a>
                        ) : (
                          term.label.trim()
                        )}
                      </>
                    ))}
                  </p>
                ))}
              </div>
            </section>

            <section id="professional-service" class="space-y-3">
              <div class="section-marker"></div>
              <h2 class="section-title">Professional Service</h2>
              <p class="text-sm leading-relaxed md:text-base"><strong>Journal Reviewer</strong>: TKDE 2025</p>
            </section>
          </div>

          <div class="w-full">
            <VisitorMap />
          </div>
        </div>
      </section>

    </aside>
  </Container>
</Layout>

<style>
  :global(#about article a),
  :global(#research a),
  :global(.research-theme-description a) {
    font-weight: 400;
    color: rgb(122 122 122);
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-thickness: 1px;
    transition: color 0.2s ease;
  }

  :global(#about article a:hover),
  :global(#research a:hover),
  :global(.research-theme-description a:hover) {
    color: rgb(96 96 96);
  }

  :global(.dark #about article a),
  :global(.dark #research a),
  :global(.dark .research-theme-description a) {
    color: rgb(156 156 156);
  }

  :global(.dark #about article a:hover),
  :global(.dark #research a:hover),
  :global(.dark .research-theme-description a:hover) {
    color: rgb(188 188 188);
  }

  :global(.research-linkish) {
    font-weight: 400;
    color: rgb(122 122 122);
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-thickness: 1px;
  }

  :global(.dark .research-linkish) {
    color: rgb(156 156 156);
  }

  :global(.person-link) {
    font-weight: 400;
    color: rgb(122 122 122);
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-thickness: 1px;
    transition: color 0.2s ease;
  }

  :global(.person-link:hover) {
    color: rgb(96 96 96);
  }

  :global(.dark .person-link) {
    color: rgb(156 156 156);
  }

  :global(.dark .person-link:hover) {
    color: rgb(188 188 188);
  }
</style>
