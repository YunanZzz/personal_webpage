---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { ABOUT } from "@consts";
import Image from "astro/components/Image.astro";
import { PROFILE } from "@data/profile";
---

<Layout title={ABOUT.TITLE} description={ABOUT.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-10">
        <div class="animate font-semibold text-black dark:text-white">
          About
        </div>
        <section class="animate not-prose flex flex-col gap-4 text-justify">
          {PROFILE.about.paragraphs.map((paragraph) => (
            <p class="text-justify">{paragraph}</p>
          ))}
        </section>

        <div class="flex flex-col md:flex-row justify-center">
          <div class="my-10 text-center">
            <div class={PROFILE.about.photos[0].className}>
              <Image
                src={PROFILE.about.photos[0].src}
                alt={PROFILE.about.photos[0].alt}
                width={PROFILE.about.photos[0].width}
                height={PROFILE.about.photos[0].height}
                class="w-[350px] h-[250px] object-cover rounded-xl overflow-hidden"
              />
            </div>
            <p class="mt-4 text-sm">{PROFILE.about.photos[0].caption}</p>
          </div>
          <div class="mx-10 my-10 text-center">
            <div class={PROFILE.about.photos[1].className}>
              <Image
                src={PROFILE.about.photos[1].src}
                alt={PROFILE.about.photos[1].alt}
                width={PROFILE.about.photos[1].width}
                height={PROFILE.about.photos[1].height}
                class="w-[150px] h-[250px] object-cover rounded-xl "
              />
            </div>
            <p class="mt-4 text-sm">{PROFILE.about.photos[1].caption}</p>
          </div>
        </div>
      </div>
    </aside>
  </Container>
</Layout>
